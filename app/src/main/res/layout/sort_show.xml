<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cn.edu.scut.phonebook.SwipeLayout
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:background="@color/MainlyGray"
        android:layout_height="58dp" >

        <RelativeLayout
            android:id="@+id/RL"
            android:background="@drawable/sort_commit"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/calllog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="16dp"
                android:text="1"
                android:textColor="@color/MainlyBlack"
                android:textSize="18sp" />

            <ImageView
                android:text="3"
                android:id="@+id/calllog_type"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="23dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/calllog_lDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp"
                android:gravity="right"
                android:text="4"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/calllog_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="32dp"
                android:gravity="right"
                android:text="5"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="60dp">
            <RelativeLayout
                android:id="@+id/delete_button"
                android:clickable="true"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_commit">
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:text="delete"
                    android:background="@drawable/btn_commit"
                    android:textColor="#FFFFFF"/>
            </RelativeLayout>
        </LinearLayout>
    </cn.edu.scut.phonebook.SwipeLayout>
</LinearLayout>