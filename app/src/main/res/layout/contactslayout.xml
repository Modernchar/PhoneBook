<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ContactsLayout"
    android:background="#3bcebf">

    <android.support.v7.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:id="@+id/SearchView"
        android:background="#f0f0f0"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:queryHint="搜索联系人"></android.support.v7.widget.SearchView>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/SearchListView"
        android:background="#f7f7f7"
        ></ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right"
        android:background="#f7f7f7">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ContactsPersonListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"></android.support.v7.widget.RecyclerView>

        <cn.edu.scut.phonebook.LetterListView
            android:id="@+id/LetterListView"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#f7f7f7"/>

        <TextView
            android:id="@+id/TextTipView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="50dp"
            android:textColor="#565656"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_contact_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="联系人"/>


</LinearLayout>